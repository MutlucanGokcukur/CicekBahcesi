<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".HesapOlusturma">

    <Button
        android:id="@+id/btnKaydet3"
        android:layout_width="232dp"
        android:layout_height="69dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="16dp"
        android:onClick="Olustur"
        android:text="Hesap Oluştur"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtHesapOlusturmaAdres"
        app:layout_constraintTop_toBottomOf="@+id/txtHesapOlusturmaAdres" />

    <EditText
        android:id="@+id/txtHesapOlusturmaAdres"
        android:layout_width="382dp"
        android:layout_height="128dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Açık Adres"
        android:inputType="textMultiLine"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@+id/btnKaydet3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MusteriBilgilerLayout" />

    <LinearLayout
        android:id="@+id/MusteriBilgilerLayout"
        android:layout_width="294dp"
        android:layout_height="359dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/txtHesapOlusturmaAdres"
        app:layout_constraintStart_toStartOf="@+id/txtHesapOlusturmaAdres"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/PlnMusteriListesiAd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ad Soyad"
            android:inputType="textPersonName"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/teal_700"
            android:textColorLink="@color/teal_700" />

        <EditText
            android:id="@+id/PlnMusteriListesiTelefonNumara"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Telefon Numarası"
            android:inputType="phone"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/teal_700" />

        <EditText
            android:id="@+id/txtHesapOlusturmaEmail"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="E-Mail Adres"
            android:inputType="textEmailAddress"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/teal_700" />

        <EditText
            android:id="@+id/PlnMusteriListesiSifre"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="En Az 6 Haneli Şifre"
            android:inputType="textPassword"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/teal_700" />

        <EditText
            android:id="@+id/txtsifretekrar"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Tekrar Şifre"
            android:inputType="textPassword"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/teal_700" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center|left"
            android:text=" İstanbul"
            android:textColor="@color/teal_700"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/txtHesapOlusturmaIlceler"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="left" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>