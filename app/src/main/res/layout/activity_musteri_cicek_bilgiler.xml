<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".MusteriCicekBilgiler">

    <ImageView
        android:id="@+id/PlnCicekBilgilerCicekResim"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bosresim" />

    <Button
        android:id="@+id/btnSepeteEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:onClick="SepeteEkle"
        android:text="Sepete Ekle"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlnCicekBilgilerCicekOzellikleri"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/PlnCicekBilgilerCicekAdı"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Çiçek Adı"
        android:inputType="textPersonName"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlnCicekBilgilerCicekResim" />

    <EditText
        android:id="@+id/PlnCicekBilgilerCicekFiyat"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:hint="Çiçek Fiyatı"
        android:inputType="textPersonName"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlnCicekBilgilerCicekResim" />

    <CheckBox
        android:id="@+id/ChcCicekBilgilerCicekDısMekan"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="Dış Mekan"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/teal_700"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/PlnCicekBilgilerCicekOzellikleri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlnCicekBilgilerCicekAdı" />

    <CheckBox
        android:id="@+id/ChcCicekBilgilerCicekIcMekan"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="İç Mekan"
        android:textColor="@color/teal_700"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/PlnCicekBilgilerCicekOzellikleri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlnCicekBilgilerCicekFiyat" />

    <EditText
        android:id="@+id/PlnCicekBilgilerCicekOzellikleri"
        android:layout_width="375dp"
        android:layout_height="180dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Çiçek Özellikleri"
        android:inputType="textLongMessage|textMultiLine"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/teal_700"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PlnCicekBilgilerCicekResim" />

    <EditText
        android:id="@+id/PlnCicekBilgilerCicekAdet"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Adet"
        android:inputType="textPersonName"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlnCicekBilgilerCicekOzellikleri" />
</androidx.constraintlayout.widget.ConstraintLayout>